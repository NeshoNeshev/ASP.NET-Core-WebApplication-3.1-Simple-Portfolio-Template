@page
@model Education
@{
    ViewData["Title"] = "Home page";
}

<section class="education">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2 class="headertekst">Education</h2>
            <a href="@GlobalConstants.Facebook" target="_blank"><i class="bx bxl-facebook" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.Github" target="_blank"><i class="bx bxl-github" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.LinkedIn" target="_blank"><i class="bx bxl-linkedin" style="font-size: 1.5em;"></i></a>
        </div>
        @foreach (var item in Model.EducationModel)
        {
            <div class="card">
                <div class="card-body">
                    <h3>@item.EducationalInstitution - @item.Period</h3>
                    <p class="h5"><em>@item.Specialty</em></p>
                </div>
            </div>
            <h3 id="subject" class="education-title">Subjects Studied</h3>
            <div class="row">
                @for (int i = 0; i < item.SchoolItems.Count; i++)
                {
                    if (i % 2 == 0)
                    {
                        <div class="col-lg-6">
                            <div class="education-item pb-0">
                                <ul>
                                    <h4>@item.SchoolItems[i].Date</h4>
                                    <li>@item.SchoolItems[i].Subjects</li>
                                    <li>@item.SchoolItems[i].Description</li>
                                    @if (item.SchoolItems[i].CertificatesLink != String.Empty)
                                    {
                                        <li>
                                            <a href="@item.SchoolItems[i].CertificatesLink.ToString()" target="_blank">Certificate...</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-lg-6">
                            <div class="education-item pb-0">
                                <ul>
                                    <h4>@item.SchoolItems[i].Date</h4>
                                    <li>@item.SchoolItems[i].Subjects</li>
                                    <li>@item.SchoolItems[i].Description</li>
                                    @if (item.SchoolItems[i].CertificatesLink != String.Empty)
                                    {
                                        <li>
                                            <a href="@item.SchoolItems[i].CertificatesLink.ToString()" target="_blank">Certificate...</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>
</section>


