@page
@model ProfessionalExperience
@{
    ViewData["Title"] = "ProfessionalExperience page";
}

<section id="professional" class="professional">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2 class="headertekst">Professional Experience</h2>
            <a href="@GlobalConstants.Facebook" target="_blank"><i class="bx bxl-facebook" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.Github" target="_blank"><i class="bx bxl-github" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.LinkedIn" target="_blank"><i class="bx bxl-linkedin" style="font-size: 1.5em;"></i></a>
        </div>

        <div class="row">
            @for (int i = 0; i < Model.ProfessionalExperienceModels.Count; i++)
            {
                
                if (i % 2 == 0)
                {
                    <div class="col-lg-6">
                        <h3 class="professional-title">@Model.ProfessionalExperienceModels[i].Organization</h3>
                        <div class="professional-item pb-0">
                            <h4>@Model.ProfessionalExperienceModels[i].Position</h4>
                            <h5>@Model.ProfessionalExperienceModels[i].Period </h5>
                            <p><em>@Model.ProfessionalExperienceModels[i].MoreInformation</em></p>
                            <ul>
                                <li> <strong>Town: </strong>@Model.ProfessionalExperienceModels[i].Town</li>
                                <li><strong>Sector: </strong>@Model.ProfessionalExperienceModels[i].Sector</li>
                                <li><strong>CompanySize: </strong>@Model.ProfessionalExperienceModels[i].CompanySize</li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-lg-6">
                        <h3 class="professional-title">@Model.ProfessionalExperienceModels[i].Organization</h3>
                        <div class="professional-item pb-0">
                            <h4>@Model.ProfessionalExperienceModels[i].Position</h4>
                            <h5>@Model.ProfessionalExperienceModels[i].Period </h5>
                            <p><em>@Model.ProfessionalExperienceModels[i].MoreInformation</em></p>
                            <ul>
                                <li> <strong>Town: </strong>@Model.ProfessionalExperienceModels[i].Town</li>
                                <li><strong>Sector: </strong>@Model.ProfessionalExperienceModels[i].Sector</li>
                                <li><strong>CompanySize: </strong>@Model.ProfessionalExperienceModels[i].CompanySize</li>
                            </ul>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
