@page
@model AboutModel

@{
    ViewData["Title"] = "About page";
}

<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2 id="demo" class="headertekst">About Me</h2>
            <a href="@GlobalConstants.Facebook" target="_blank"><i class="bx bxl-facebook" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.Github" target="_blank"><i class="bx bxl-github" style="font-size: 1.5em;"></i></a>
            <a href="@GlobalConstants.LinkedIn" target="_blank"><i class="bx bxl-linkedin" style="font-size: 1.5em;"></i></a>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <img src="/images/bg_2.png" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 pt-4 pt-lg-0 content">
                <p>@GlobalConstants.Description</p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li> <strong>FirstName:</strong> <span>@Model.PrivacyInformationModel.FirstName</span></li>
                            <li> <strong>LastName:</strong> <span>@Model.PrivacyInformationModel.LastName</span></li>
                            <li> <strong>ThirdName:</strong> <span>@Model.PrivacyInformationModel.ThirdName</span></li>
                            <li> <strong>Birthday:</strong> <span>@Model.PrivacyInformationModel.Birthday</span></li>
                            <li> <strong>Phone:</strong> <span><a href="tel:+359 888 724 640">@Model.PrivacyInformationModel.PhoneNumber</a></span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><strong>Age:</strong> <span>@Model.PrivacyInformationModel.Age</span></li>
                            <li><strong>Degree:</strong> <span>Junior</span></li>
                            <li><strong>City:</strong> <span>@Model.PrivacyInformationModel.Town</span></li>
                            <li><strong>Gender:</strong> <span>@Model.PrivacyInformationModel.Gender</span></li>
                        </ul>
                    </div>
                </div>
                <p>
                    @Model.PrivacyInformationModel.Description
                </p>
            </div>
        </div>
    </div>
</section>